@{ Layout = "~/Views/Shared/_Layout.cshtml"; }

@section Title {Create Room}
@model StreamInSync.Models.CreateRoomVM
@using (Html.BeginForm("Create", "Room", FormMethod.Post, new { autocomplete = "off"}))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Create Room</legend>
        @Html.AntiForgeryToken()

        @if (Model != null && Model.Success == false)
        {
            <div class="alert alert-info" role="alert">
                Room name already taken :( Try Again.
            </div>
        }

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        <br>
        <div class="editor-label">
            @Html.LabelFor(model => model.Password)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { placeholder = "Optional"} })
            @Html.ValidationMessageFor(model => model.Password)
        </div>
        <br>
        <div class="editor-label">
            @Html.LabelFor(model => model.ProgrammeName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ProgrammeName)
            @Html.ValidationMessageFor(model => model.ProgrammeName)
        </div>
        <br>
        <div class="editor-label">
            <label for="RuntimeInSeconds">Programme Runtime</label>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.RuntimeInSeconds)
            @Html.ValidationMessageFor(model => model.RuntimeInSeconds)
        </div>
        <br>
        <div class="editor-label">
            @Html.LabelFor(model => model.ProgrammeStartTime)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ProgrammeStartTime)
            @Html.ValidationMessageFor(model => model.ProgrammeStartTime)
        </div>
        <br>
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}